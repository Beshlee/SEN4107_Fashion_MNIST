import torch
import torch.nn as nn
import torch.optim as optim
from torchvision import datasets, transforms, models

# --- Step 1: Model Customization ---
def get_resnet_model():
    # Load ResNet-18 without pre-trained weights
    model = models.resnet18(num_classes=10)
    # Modify first layer to accept grayscale images (1 channel)
    model.conv1 = nn.Conv2d(1, 64, kernel_size=7, stride=2, padding=3, bias=False)
    return model

# --- Step 2: Training Parameters ---
device = torch.device("cuda" if torch.cuda.is_available() else "cpu")
model = get_resnet_model().to(device)
criterion = nn.CrossEntropyLoss() # Use CrossEntropy for stability in deep models
optimizer = optim.Adam(model.parameters(), lr=0.0001)

# --- Step 3: Execution Loop ---
def train_resnet(epoch):
    model.train()
    for batch_idx, (data, target) in enumerate(train_loader):
        data, target = data.to(device), target.to(device)
        optimizer.zero_grad()
        output = model(data)
        loss = criterion(output, target)
        loss.backward()
        optimizer.step()
        if batch_idx % 200 == 0:
            print(f'ResNet Train Epoch: {epoch} Loss: {loss.item():.6f}')

def test_resnet():
    model.eval()
    correct = 0
    with torch.no_grad():
        for data, target in test_loader:
            data, target = data.to(device), target.to(device)
            output = model(data)
            pred = output.argmax(dim=1, keepdim=True)
            correct += pred.eq(target.view_as(pred)).sum().item()
    print(f'ResNet Test Accuracy: {100. * correct / len(test_loader.dataset):.2f}%')

# Run Training
for epoch in range(1, 6):
    train_resnet(epoch)
    test_resnet()